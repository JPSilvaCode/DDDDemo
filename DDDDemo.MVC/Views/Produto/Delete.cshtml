@model DDDDemo.MVC.ViewModel.ProdutoViewModel

@{
    ViewBag.Title = "Excluir";
}

<div>
    <h4>Excluir Produto</h4>

    <h5>Deseja realmente excluir este produto?</h5>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Valor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Valor)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Situacao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SituacaoTexto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoriaId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria.Nome)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col col-md-1">
                <div class="form-actions no-color">
                    <input type="submit" value="Excluir" class="btn btn-outline-danger" />
                </div>
            </div>
            <div class="col col-md-1">
                @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-outline-secondary" })
            </div>
        </div>
    }
</div>
