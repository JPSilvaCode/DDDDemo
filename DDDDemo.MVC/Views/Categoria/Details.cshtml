@model DDDDemo.Dominio.Entidades.Categoria

@{
    ViewBag.Title = "Details";
}

<div>
    <h4>Detalhes da Categoria</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

    </dl>
</div>

<div class="row">
    <div class="col col-md-1">
        @Html.ActionLink("Editar", "Edit", new { id = Model.CategoriaId }, new { @class = "btn btn-outline-warning" })
    </div>
    <div class="col col-md-1">
        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-outline-secondary" })
    </div>
</div>
